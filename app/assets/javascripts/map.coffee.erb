$(
  ->
    # Setup
    mapOptions = {
      zoom: 5,
      center: {lat: 38.6, lng: -95.7},
      mapTypeId: 'terrain'
    }
    mapContainer = document.getElementById("map-container")
    map = new google.maps.Map(mapContainer, mapOptions)
    directionsService = new google.maps.DirectionsService
    # Draw Method
    drawRoute = (origin, destination, options={waypoints: [], color: "blue"}) ->
      directionsDisplay = new google.maps.DirectionsRenderer({
        map: map
        preserveViewport: true
        suppressMarkers: true
        polylineOptions: {
          strokeColor: options.color
          strokeOpacity: 1
          strokeWeight: 8
        }
      })
      request = {
        origin, destination,
        waypoints: options.waypoints,
        travelMode: google.maps.DirectionsTravelMode.DRIVING
      }
      directionsService.route(request, (response) -> directionsDisplay.setDirections(response) )

    helga.routes.forEach((route) -> drawRoute(route.origin, route.destination))

)
